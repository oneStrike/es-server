/// 论坛回复点赞表 - 记录用户对回复的点赞关系
model ForumReplyLike {
  /// 主键ID
  id        Int          @id @default(autoincrement())
  /// 关联的回复ID
  replyId   Int          @map("reply_id")
  /// 关联的用户ID
  profileId    Int          @map("profile_id")
  /// 创建时间
  createdAt DateTime     @default(now()) @map("created_at") @db.Timestamptz(6)
  reply     ForumReply   @relation(fields: [replyId], references: [id], onDelete: Cascade)
  profile   ForumProfile @relation(fields: [profileId], references: [id], onDelete: Cascade)

  @@unique([replyId, profileId])
  @@index([replyId])
  @@index([profileId])
  @@index([createdAt])
  @@map("forum_reply_like")
}
