/// 论坛用户徽章关联表 - 管理用户获得的徽章，一个用户可以有多个徽章
model ForumProfileBadge {
  /// 主键ID
  id        Int          @id @default(autoincrement())
  /// 关联的用户资料ID
  profileId Int          @map("profile_id")
  /// 关联的徽章ID
  badgeId   Int          @map("badge_id")
  /// 获得时间
  createdAt DateTime     @default(now()) @map("created_at") @db.Timestamptz(6)
  badge     ForumBadge   @relation(fields: [badgeId], references: [id], onDelete: Cascade)
  profile   ForumProfile @relation(fields: [profileId], references: [id], onDelete: Cascade)

  @@unique([profileId, badgeId])
  @@index([profileId])
  @@index([badgeId])
  @@index([createdAt])
  @@map("forum_profile_badge")
}
