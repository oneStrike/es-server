model ForumModerator {
  /// 主键ID
  id             Int                       @id @default(autoincrement())
  /// 关联的用户ID
  userId         Int                       @unique @map("user_id")
  /// 权限位掩码（1=置顶, 2=加精, 4=锁定, 8=删除, 16=审核, 32=移动）
  permissionMask Int                       @default(0) @map("permission_mask")
  /// 是否启用
  isEnabled      Boolean                   @default(true) @map("is_enabled")
  /// 备注
  remark         String?                   @db.VarChar(500)
  /// 创建时间
  createdAt      DateTime                  @default(now()) @map("created_at") @db.Timestamptz(6)
  /// 更新时间
  updatedAt      DateTime                  @updatedAt @map("updated_at") @db.Timestamptz(6)
  /// 软删除时间
  deletedAt      DateTime?                 @map("deleted_at") @db.Timestamptz(6)
  profile        ForumProfile              @relation(fields: [userId], references: [id], onDelete: Cascade)
  actionLogs     ForumModeratorActionLog[]
  sections       ForumModeratorSection[]

  @@index([permissionMask])
  @@index([isEnabled])
  @@index([createdAt])
  @@index([deletedAt])
  @@map("forum_moderator")
}
