model ForumReply {
  /// 主键ID
  id              Int       @id @default(autoincrement())
  /// 回复内容
  content         String    @db.Text
  /// 关联的主题ID
  topicId         Int       @map("topic_id") @db.Integer
  /// 关联的主题
  topic           ForumTopic @relation(fields: [topicId], references: [id], onDelete: Cascade)
  /// 关联的用户ID
  userId          Int       @map("user_id") @db.Integer
  /// 关联的用户资料
  profile         ForumProfile @relation(fields: [userId], references: [id], onDelete: Cascade)
  /// 关联的用户
  user            ClientUser @relation(fields: [userId], references: [id])
  /// 回复楼层（从1开始）
  floor           Int       @db.Integer
  /// 回复的回复ID（楼中楼）
  replyToId       Int?      @map("reply_to_id") @db.Integer
  /// 回复的回复
  replyTo         ForumReply? @relation("ReplyTo", fields: [replyToId], references: [id], onDelete: SetNull)
  /// 被回复的回复列表
  replies         ForumReply[] @relation("ReplyTo")
  /// 是否隐藏（待审核）
  isHidden        Boolean   @default(false) @map("is_hidden")
  /// 审核状态（0=待审核, 1=已通过, 2=已拒绝）
  auditStatus     Int       @default(0) @map("audit_status") @db.SmallInt
  /// 审核原因
  auditReason     String?   @map("audit_reason") @db.VarChar(500)
  /// 审核时间
  auditAt         DateTime? @map("audit_at") @db.Timestamptz
  /// 审核人ID
  auditBy         Int?      @map("audit_by") @db.Integer
  /// 点赞数
  likeCount       Int       @default(0) @map("like_count") @db.Integer
  /// 创建时间
  createdAt       DateTime  @default(now()) @map("created_at") @db.Timestamptz
  /// 更新时间
  updatedAt       DateTime  @updatedAt @map("updated_at") @db.Timestamptz
  /// 软删除时间
  deletedAt       DateTime? @map("deleted_at") @db.Timestamptz

  /// 关联的点赞记录
  likes           ForumReplyLike[]
  /// 关联的审核日志
  auditLogs       ForumAuditLog[]

  /// 索引优化
  @@index([topicId])
  @@index([userId])
  @@index([floor])
  @@index([replyToId])
  @@index([isHidden])
  @@index([auditStatus])
  @@index([likeCount])
  @@index([createdAt])
  @@index([updatedAt])
  @@index([deletedAt])
  @@index([topicId, floor])
  @@index([topicId, createdAt])
  @@map("forum_reply")
}
