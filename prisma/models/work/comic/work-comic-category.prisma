model WorkComicCategory {
  /// 漫画ID
  comicId    Int          @map("comic_id")
  /// 分类ID  
  categoryId Int          @map("category_id")
  /// 关联时间
  createdAt  DateTime     @default(now()) @map("created_at")
  /// 更新时间
  updatedAt  DateTime     @updatedAt @map("updated_at")
  /// 排序顺序（用于展示顺序）
  sortOrder  Int          @default(0) @map("sort_order")
  category   WorkCategory @relation(fields: [categoryId], references: [id], onDelete: Cascade)
  comic      WorkComic    @relation(fields: [comicId], references: [id], onDelete: Cascade)

  @@id([comicId, categoryId])
  @@index([categoryId])
  @@index([sortOrder])
  @@index([comicId, sortOrder])
  @@map("work_comic_category")
}
