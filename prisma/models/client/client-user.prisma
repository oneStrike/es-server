model ClientUser {
  /// 主键ID
  id              Int           @id @default(autoincrement())
  /// 用户名（登录账号）
  username        String        @unique @map("username") @db.VarChar(50)
  /// 用户昵称（显示名称）
  nickname        String?       @map("nickname") @db.VarChar(100)
  /// 头像URL地址
  avatarUrl       String?       @map("avatar_url") @db.VarChar(500)
  /// 手机号码
  phoneNumber     String?       @unique @map("phone_number") @db.VarChar(20)
  /// 邮箱地址
  emailAddress    String?       @unique @map("email_address") @db.VarChar(255)
  /// 账户状态（true:启用, false:禁用）
  isEnabled       Boolean       @default(true) @map("is_enabled")
  /// 性别类型（0:未知, 1:男性, 2:女性, 3:其他）
  genderType      Int           @default(0) @map("gender_type") @db.SmallInt
  /// 出生日期
  birthDate       DateTime?     @map("birth_date") @db.Date
  /// 最后登录时间
  lastLoginAt     DateTime?     @map("last_login_at") @db.Timestamptz(6)
  /// 最后登录IP地址
  lastLoginIp     String?       @map("last_login_ip") @db.VarChar(45)
  /// 账户创建时间
  createdAt       DateTime      @default(now()) @map("created_at") @db.Timestamptz(6)
  /// 账户更新时间
  updatedAt       DateTime      @updatedAt @map("updated_at") @db.Timestamptz(6)
  /// 软删除时间
  deletedAt       DateTime?     @map("deleted_at") @db.Timestamptz(6)
  forumProfile    ForumProfile?
  forumReplies    ForumReply[]
  forumTopics     ForumTopic[]
  lastReplyTopics ForumTopic[]  @relation("LastReplyUser")

  @@index([isEnabled])
  @@index([genderType])
  @@index([createdAt])
  @@index([lastLoginAt])
  @@index([phoneNumber])
  @@index([emailAddress])
  @@map("client_user")
}
