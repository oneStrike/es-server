/// 客户端页面配置
model ClientPage {
  /// 主键id
  id             Int      @id @default(autoincrement())
  /// 页面编码（唯一标识）
  code           String   @unique @map("code") @db.VarChar(50)
  /// 页面路径（URL路径）
  path           String   @unique @map("path") @db.VarChar(300)
  /// 页面名称
  name           String   @map("name") @db.VarChar(100)
  /// 页面标题（用于SEO）
  title          String   @map("title") @db.VarChar(200)
  /// 访问权限级别（0:游客可访问, 1:需要登录, 2:需要会员, 3:需要VIP）
  accessLevel    Int      @default(0) @map("access_level") @db.SmallInt
  /// 启用的平台（bitmask：1=H5, 2=APP, 4=小程序）
  enablePlatform Int      @map("enable_platform")
  /// 页面启用状态
  isEnabled      Boolean  @default(true) @map("is_enabled")
  /// 页面描述信息
  description    String?  @map("description") @db.VarChar(500)
  /// 创建时间
  createdAt      DateTime @default(now()) @map("created_at") @db.Timestamptz
  /// 更新时间
  updatedAt      DateTime @updatedAt @map("updated_at") @db.Timestamptz

  /// 关联的通知公告
  notices ClientNotice[] @relation("notices")

  /// 索引优化
  @@index([accessLevel, isEnabled]) // 按权限级别和状态查询
  @@map("client_page")
}
