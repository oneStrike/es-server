/// 应用通知阅读记录表 - 记录用户已读的通知
model AppNoticeRead {
  /// 主键ID
  id       Int      @id @default(autoincrement())
  /// 关联的通知ID
  noticeId Int      @map("notice_id")
  /// 关联的用户ID
  userId   Int      @map("user_id")
  /// 阅读时间
  readAt   DateTime @default(now()) @map("read_at") @db.Timestamptz(6)

  /// 关联通知
  notice AppNotice @relation(fields: [noticeId], references: [id], onDelete: Cascade)
  /// 关联用户
  user   AppUser   @relation(fields: [userId], references: [id], onDelete: Cascade)

  /// 通知与用户唯一约束
  @@unique([noticeId, userId])
  /// 通知索引
  @@index([noticeId])
  /// 用户索引
  @@index([userId])
  /// 阅读时间索引
  @@index([readAt])
  @@map("app_notice_read")
}
