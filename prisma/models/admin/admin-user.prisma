model AdminUser {
  /// 主键id
  id Int @id @default(autoincrement())

  /// 账号
  username  String  @unique @db.VarChar(20)
  /// 密码
  password  String  @db.VarChar(500)
  /// 手机号码
  mobile    String? @db.VarChar(11)
  /// 头像
  avatar    String? @db.VarChar(200)
  /// 账号角色
  role      Int     @default(0) @db.SmallInt
  /// 是否启用账号
  isEnabled Boolean @default(true) @map("is_enabled")
  /// 账户锁定状态
  isLocked  Boolean @default(false) @map("is_locked")

  /// 最后登录时间
  lastLoginAt    DateTime? @map("last_login_at") @db.Timestamptz(6)
  /// 最后登录IP
  lastLoginIp    String?   @map("last_login_ip") @db.VarChar(45)
  /// 登录失败时间
  loginFailAt    DateTime? @map("login_fail_at") @db.Timestamptz(6)
  /// 登录失败IP
  loginFailIp    String?   @map("login_fail_ip") @db.VarChar(45)
  /// 登录失败次数
  loginFailCount Int       @default(0) @map("login_fail_count")

  /// 创建时间
  createdAt DateTime @default(now()) @map("created_at") @db.Timestamptz(6)
  /// 更新时间
  updatedAt DateTime @updatedAt @map("updated_at") @db.Timestamptz(6)

  @@index([isEnabled])
  @@index([role])
  @@index([createdAt])
  @@index([lastLoginAt])
  @@index([isLocked])
  @@map("admin_user")
}
