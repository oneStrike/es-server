NODE_ENV="development"
# 应用配置
APP_NAME="app-api"
APP_PORT=8081
APP_VERSION="1.0.0"
APP_FILE_URL_PREFIX="/files"

# 数据库连接配置
DB_HOST="localhost"
DB_PORT=5432
DB_USER="postgres"
DB_PASSWORD="your_database_password"
DB_NAME="foo"
DB_MAX_QUERY_LIST_LIMIT=500
DB_PAGINATION_PAGE_SIZE=15
DB_PAGINATION_PAGE_INDEX=0
DATABASE_URL=postgresql://postgres:your_database_password@postgres:5432/foo

# Redis 配置
REDIS_PASSWORD="your_redis_password"
REDIS_HOST="localhost"
REDIS_PORT=6379
REDIS_NAMESPACE="ES"

# JWT 配置
JWT_SECRET="your_jwt_secret_key_here"
JWT_REFRESH_SECRET="your_jwt_refresh_secret_key_here"
JWT_EXPIRATION_IN="4h"
JWT_REFRESH_EXPIRATION_IN="7d"
JWT_JWT_ISSUER="es"
JWT_JWT_AUD="client"
JWT_STRATEGY_KEY="jwt"

# RSA 配置
# 请使用以下命令生成RSA密钥对：
# openssl genrsa -out private.pem 2048
# openssl rsa -in private.pem -pubout -out public.pem
RSA_PUBLIC_KEY="-----BEGIN PUBLIC KEY-----
YOUR_PUBLIC_KEY_HERE
-----END PUBLIC KEY-----"
RSA_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----
YOUR_PRIVATE_KEY_HERE
-----END PRIVATE KEY-----"

# 日志配置
LOG_LEVEL="debug"
LOG_PATH="./logs"
LOG_RETAIN_DAYS="14d"
LOG_MAX_SIZE="20m"
LOG_COMPRESS="true"
LOG_CONSOLE_LEVEL="info"

# 文件上传配置
UPLOAD_DIR="apps/app-api/uploads"
UPLOAD_MAX_FILE_SIZE="100MB"
UPLOAD_MAX_FILES=10

# 阿里云配置
ALIYUN_SMS_ENDPOINT="dypnsapi.aliyuncs.com"
ALIYUN_SMS_SIGN_NAME="速通互联验证码"
ALIBABA_CLOUD_ACCESS_KEY_ID=your_aliyun_access_key_id
ALIBABA_CLOUD_ACCESS_KEY_SECRET=your_aliyun_access_key_secret
