{
  "compilerOptions": {
    "incremental": true,
    "target": "ES2020",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "baseUrl": "./",
    "module": "commonjs",
    "paths": {
      "@/*": [
        "./src/*"
      ],
      "@libs/base": [
        "libs/base/src"
      ],
      "@libs/base/*": [
        "libs/base/src/*"
      ],
      "@libs/client-config": [
        "libs/client-config/src"
      ],
      "@libs/client-config/*": [
        "libs/client-config/src/*"
      ],
      "@libs/dictionary": [
        "libs/dictionary/src"
      ],
      "@libs/dictionary/*": [
        "libs/dictionary/src/*"
      ]
    },
    "resolveJsonModule": true,
    "allowJs": true,
    "strictBindCallApply": false,
    "strictNullChecks": true,
    "noFallthroughCasesInSwitch": false,
    "noImplicitAny": false,
    "declaration": true,
    "outDir": "./dist",
    "removeComments": true,
    "sourceMap": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": false,
    "skipLibCheck": true
  },
  "include": [
    "apps/**/*",
    "libs/**/*",
    "src/**/*",
    "test/**/*",
    "*.ts"
  ],
  "exclude": [
    "node_modules",
    "test",
    "dist",
    "**/*spec.ts",
    "libs/base/src/database/prisma-client/**/*"
  ]
}
