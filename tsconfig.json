{
  "compilerOptions": {
    "incremental": true,
    "target": "ES2020",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "baseUrl": "./",
    "module": "commonjs",
    "paths": {
      "@/*": [
        "./src/*"
      ],
      "@libs/auth": [
        "libs/auth/src"
      ],
      "@libs/auth/*": [
        "libs/auth/src/*"
      ],
      "@libs/base": [
        "libs/base/src"
      ],
      "@libs/base/*": [
        "libs/base/src/*"
      ],
      "@libs/cache": [
        "libs/cache/src"
      ],
      "@libs/cache/*": [
        "libs/cache/src/*"
      ],
      "@libs/captcha": [
        "libs/captcha/src"
      ],
      "@libs/captcha/*": [
        "libs/captcha/src/*"
      ],
      "@libs/config": [
        "libs/config/src"
      ],
      "@libs/config/*": [
        "libs/config/src/*"
      ],
      "@libs/crypto": [
        "libs/crypto/src"
      ],
      "@libs/crypto/*": [
        "libs/crypto/src/*"
      ],
      "@libs/database": [
        "./libs/database/src"
      ],
      "@libs/database/*": [
        "./libs/database/src/*"
      ],
      "@libs/decorators": [
        "libs/decorators/src"
      ],
      "@libs/decorators/*": [
        "libs/decorators/src/*"
      ],
      "@libs/dto": [
        "libs/dto/src"
      ],
      "@libs/dto/*": [
        "libs/dto/src/*"
      ],
      "@libs/filters": [
        "libs/filters/src"
      ],
      "@libs/filters/*": [
        "libs/filters/src/*"
      ],
      "@libs/health": [
        "libs/health/src"
      ],
      "@libs/health/*": [
        "libs/health/src/*"
      ],
      "@libs/logger": [
        "libs/logger/src"
      ],
      "@libs/logger/*": [
        "libs/logger/src/*"
      ],
      "@libs/types": [
        "libs/types/src"
      ],
      "@libs/types/*": [
        "libs/types/src/*"
      ],
      "@libs/upload": [
        "libs/upload/src"
      ],
      "@libs/upload/*": [
        "libs/upload/src/*"
      ],
      "@libs/utils": [
        "libs/utils/src"
      ],
      "@libs/utils/*": [
        "libs/utils/src/*"
      ]
    },
    "resolveJsonModule": true,
    "allowJs": true,
    "strictBindCallApply": false,
    "strictNullChecks": true,
    "noFallthroughCasesInSwitch": false,
    "noImplicitAny": false,
    "declaration": true,
    "outDir": "./dist",
    "removeComments": true,
    "sourceMap": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": false,
    "skipLibCheck": true
  },
  "include": [
    "apps/**/*",
    "libs/**/*",
    "src/**/*",
    "test/**/*",
    "*.ts"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}
